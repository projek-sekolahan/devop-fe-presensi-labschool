# Mengaktifkan modul rewrite
RewriteEngine On
RewriteBase /

# Biarkan file index.html tetap seperti apa adanya
RewriteRule ^index\.html$ - [L]

# Cek apakah file yang diminta tidak ada
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Arahkan semua permintaan yang tidak sesuai ke index.html
RewriteRule ^.*$ /index.html [L]

# Blokir akses langsung ke folder tertentu
RewriteRule ^(src|node_modules|config|env|logs|private) - [F,L]

# Blokir file sensitif
<FilesMatch "\.(env|htaccess|json|lock|log|bak|old|config|xml|sh)$">
    Require all denied
</FilesMatch>

# Nonaktifkan penjelajahan direktori
Options -Indexes

# Tambahkan header keamanan
<IfModule mod_headers.c>
    Header always append X-Frame-Options DENY
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options nosniff
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
</IfModule>

# Batasi metode HTTP yang diizinkan
<LimitExcept GET POST>
    Require all denied
</LimitExcept>

# Aktifkan caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Batasi ukuran permintaan (10 MB)
LimitRequestBody 10485760
